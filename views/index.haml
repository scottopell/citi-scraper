
:css
  .day {
    cursor: pointer;
    border: 1px solid black;
    border-radius: 3px;
    box-shadow:  3px 3px 0px 0px rgba(0,0,0,0.75);
    margin-right: 4px;
    padding: 3px;
  }

  .day:hover {
    box-shadow: 2px 2px 0px 0px rgba(0,0,0,0.75);
  }

  .days {
    margin-bottom: 7px;
  }

  .day.selected {
    box-shadow: 2px 2px 0px 0px rgba(0,0,0,0.75);
  }

  .results {
    line-height: 1.5;
    font-size: 300px;
    font-weight: bold;
  }

%script(src="src/index.js")

%h1 CanIBike.NYC

.input
  %label
    When would you like to leave?
  .days
    %span.day{"data-dow": '0'}
      Sun
    %span.day{"data-dow": '1'}
      Mon
    %span.day{"data-dow": '2'}
      Tues
    %span.day{"data-dow": '3'}
      Wed
    %span.day{"data-dow": '4'}
      Thurs
    %span.day{"data-dow": '5'}
      Fri
    %span.day{"data-dow": '6'}
      Sat
  .time
    %input{type: "time"}

  %br

  %label
    What station?
  %input#station_id{type: "number"}

  %br

  %input{type: "submit"}


.result-container{style: 'display: none'}
  .h3 Probability of bike being available
  .results

